commands:
  01-install-node:
    command: "yum install nodejs npm --enablerepo=epel -y || :"
  02-public-build:
    command: mkdir /var/app/ondeck/public/build
    ignoreErrors: true
  03-public-build:
    command: mkdir /var/app/staging/public/build
    ignoreErrors: true

container_commands:
  01-install-node-modules:
    command: "sudo -u webapp npm install --ddd --logs-dir=. || :"
  02-npm-build:
    command: "sudo -u webapp npm run build --ddd --logs-dir=. || :"
