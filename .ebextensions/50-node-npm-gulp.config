commands:
  01-install-node:
    command: "yum install nodejs npm --enablerepo=epel -y"

commands:
  02-cache-clean:
    command: "sudo -u webapp npm --verbose cache clean -f"

container_commands:
  03-install-node-modules:
    command: "sudo -u webapp npm --verbose install"

container_commands:
  04-npm-build:
    command: "sudo -u webapp npm --verbose run build"
