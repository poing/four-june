commands:
  01-install-node:
    command: "yum install nodejs npm --enablerepo=epel -y || :"
  02-public-build:
    command: mkdir -p /var/app/staging/public/build

container_commands:
  01-install-node-modules:
    command: "sudo -u webapp npm install --ddd --logs-dir=. || :"
  02-npm-build:
    command: "sudo -u webapp npm run build --ddd --logs-dir=. || :"
