commands:
  01-install-node:
    command: "yum install nodejs npm --enablerepo=epel -y || :"

container_commands:
  02-install-node-modules:
    command: "sudo -u webapp npm install --ddd --logs-dir=. || :"

container_commands:
  03-public-build:
    command: sudo -u webapp mkdir -p public/build

container_commands:
  04-npm-build:
    command: "sudo -u webapp npm run build --ddd --logs-dir=. || :"
