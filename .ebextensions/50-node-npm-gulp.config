commands:
  01-install-node:
    command: "yum install nodejs npm --enablerepo=epel -y"

commands:
  02-cache-clean:
    command: "sudo -u webapp npm cache clean -f --verbose"

container_commands:
  03-install-node-modules:
    command: "sudo -u webapp npm install --verbose"

container_commands:
  04-npm-build:
    command: "sudo -u webapp npm run build --verbose"
