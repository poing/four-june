commands:
  01-install-node:
    command: "yum install nodejs npm -y >> /var/log/npm.log"

container_commands:
  02-install-node-modules:
    command: "sudo -u webapp npm install --loglevel verbose >> /var/log/npm.log"

container_commands:
  03-npm-build:
    command: "sudo -u webapp npm run build --loglevel verbose >> /var/log/npm.log"
